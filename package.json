{
  "name": "xmtp-bot-cli",
  "version": "0.0.3",
  "description": "Easy XMTP bot server with command line control",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"src/**/*.(js|ts)\"",
    "lint": "eslint src --ext .js,.ts",
    "lint:fix": "eslint src --fix --ext .js,.ts",
    "test": "jest --config jest.config.js --runInBand --detectOpenHandles --forceExit",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/tomosaigon/xmtp-bot-cli.git"
  },
  "keywords": [
    "typescript",
    "xmtp",
    "bot",
    "cli"
  ],
  "author": "Tomo Saigon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/tomosaigon/xmtp-bot-cli/issues"
  },
  "homepage": "https://github.com/tomosaigon/xmtp-bot-cli",
  "devDependencies": {
    "@types/jest": "29.4.0",
    "@typescript-eslint/eslint-plugin": "5.54.0",
    "@typescript-eslint/parser": "5.52.0",
    "eslint": "8.35.0",
    "eslint-plugin-jest": "27.2.1",
    "jest": "29.4.3",
    "mock-stdin": "^1.0.0",
    "prettier": "2.8.4",
    "ts-jest": "29.0.5",
    "typescript": "4.9.5"
  },
  "files": [
    "lib/**/*"
  ],
  "dependencies": {
    "@xmtp/xmtp-js": "^10.2.1",
    "iteracer": "^0.0.5"
  }
}
